<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FDFDFC"
    tools:context=".AddExperience">

    <EditText
        android:id="@+id/company"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Company Name"
        android:textSize="20sp"
        android:textColor="#033A59"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/coding"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Coding Round"
        android:textSize="20sp"
        android:textColor="#033A59"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/int_1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Interview Round 1"
        android:inputType="textMultiLine"
        android:textSize="20sp"
        android:textColor="#033A59"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/int_2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Interview Round 2"
        android:inputType="textMultiLine"
        android:textSize="20sp"
        android:textColor="#033A59"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/int_3"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Interview Round 3"
        android:inputType="textMultiLine"
        android:textSize="20sp"
        android:textColor="#033A59"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/sugg"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Any other Suggestions"
        android:textSize="20sp"
        android:inputType="textMultiLine"
        android:textColor="@color/darker_shade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/done"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Done"
        android:textColor="@color/lighter_shade"
        app:backgroundTint="#034D77"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>